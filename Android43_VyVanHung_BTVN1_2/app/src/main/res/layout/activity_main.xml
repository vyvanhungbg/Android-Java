<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity"
    >

    <RelativeLayout
        android:background="#4A3F3F"
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/baseline_menu_36"
            android:layout_alignParentLeft="true"
            >

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ĐẶT LỆNH GIAO DỊCH"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_centerInParent="true">

        </TextView>

    </RelativeLayout>

    <!--    body-->

    <LinearLayout
        android:layout_below="@+id/head"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6"
        android:layout_margin="30dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center"
            >

            <!--            button 1 /body-->
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="10dp"
                >
                <TextView
                    android:textAlignment="center"
                    android:background="#E80F0F"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:text="THÔNG THƯỜNG"
                    android:gravity="center_horizontal"></TextView>
            </androidx.cardview.widget.CardView>

            <!--            button 2 /body-->
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="10dp"
                >
                <TextView
                    android:textAlignment="center"
                    android:background="#E80F0F"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:text="ĐỊNH KÌ"
                    android:gravity="center_horizontal"></TextView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!--        // item 2/body-->
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >
            <RelativeLayout
                android:padding="10dp"
                android:background="#F3CDCD"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loại lệnh"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp">

                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_arrow_back_ios_24"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    ></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:text="MUA"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true">

                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_arrow_forward_ios_24"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    ></ImageView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <!--        item 2/ body-->
        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >
            <RelativeLayout
                android:padding="10dp"
                android:background="#EDD4D4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã chứng chỉ quỹ"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp">

                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_arrow_back_ios_24"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    ></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:text="VFMVF4"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true">

                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_arrow_forward_ios_24"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    ></ImageView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!--        item 3 / body-->

        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >
            <RelativeLayout
                android:padding="10dp"
                android:background="#EDD4D4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Giá trị mua">

                </TextView>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true">

                </TextView>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <!--        //item 4/ body-->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center"
            >

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="10dp"
                >
                <TextView
                    android:textAlignment="center"
                    android:background="#E80F0F"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:text="MUA"
                    android:gravity="center_horizontal"></TextView>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>




    <!--    menu-->
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3D5D5"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_alignParentBottom="true"
        >
        <!--        item 1-->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/baseline_account_circle_18">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tài khoản"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center_horizontal">

            </TextView>
        </LinearLayout>


        <!--        item 2 -->

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/outline_show_chart_24">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Báo cáo"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center_horizontal">

            </TextView>
        </LinearLayout>

        <!--        item 3-->

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/outline_touch_app_24">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Đặt lệnh"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center_horizontal">

            </TextView>
        </LinearLayout>

        <!--        item 4-->


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/outline_format_list_numbered_24">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Số lệnh"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center_horizontal">

            </TextView>
        </LinearLayout>

        <!--        item 5-->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/outline_notifications_24">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Thông báo"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center_horizontal">

            </TextView>
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>